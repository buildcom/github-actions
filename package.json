{
  "name": "the-sorting-hat",
  "version": "1.0.0",
  "private": true,
  "description": "GitHub bot to sort things with labels",
  "author": "Lisa Dean <thesortinghat@lisadean.net>",
  "license": "ISC",
  "homepage": "https://github.com/lisadean/the-sorting-hat",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "build": "tsc & ncc build lib/github-action.js -o dist",
    "start": "node ./lib/index.js",
    "test": "jest",
    "dev": "tsc -w & nodemon ./lib/index.js",
    "dev:debug": "tsc -w & nodemon --inspect ./lib/index.js",
    "receive": "probot receive -e pull_request -p test/fixtures/pull_request.edited.json lib/app.js"
  },
  "dependencies": {
    "@noqcks/generated": "^1.0.0",
    "@probot/adapter-github-actions": "^3.0.1",
    "dotenv": "^10.0.0",
    "minimatch": "^3.0.4",
    "probot": "^11.0.1"
  },
  "devDependencies": {
    "@octokit/webhooks": "^9.10.0",
    "@semantic-release/git": "^9.0.0",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.19",
    "@vercel/ncc": "^0.29.0",
    "jest": "^26.6.3",
    "nock": "^13.0.5",
    "nodemon": "^2.0.12",
    "semantic-release": "^17.4.4",
    "smee-client": "^1.2.2",
    "ts-jest": "^26.4.4",
    "ts-node": "^10.1.0",
    "typescript": "^4.1.3"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/git",
        {
          "assets": [
            "dist/index.js"
          ],
          "message": "build(release): compiled action for ${nextRelease.version}\n\n[skip ci]"
        }
      ],
      "@semantic-release/github"
    ]
  },
  "engines": {
    "node": ">= 10.13.0"
  },
  "prettier": {
    "printWidth": 140,
    "tabWidth": 4,
    "useTabs": true,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSpacing": true,
    "jsxBracketSameLine": true,
    "arrowParens": "always",
    "endOfLine": "lf"
  }
}
