{
  "name": "things-must-be-labeled",
  "version": "1.0.0",
  "private": true,
  "description": "GitHub bot to automatically label things",
  "author": "Lisa Dean <thingsmustbelabeled@lisadean.net>",
  "license": "ISC",
  "homepage": "https://github.com/lisadean/things-must-be-labeled",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "build": "tsc",
	"start": "node ./lib/main.js",
    "test": "jest",
	"dev": "tsc -w & nodemon ./lib/main.js",
	"dev:debug": "tsc -w & nodemon --inspect ./lib/main.js",
	"receive": "probot receive -e pull_request -p test/fixtures/pull_request.edited.json lib/index.js"
  },
  "dependencies": {
    "@noqcks/generated": "^1.0.0",
    "dotenv": "^10.0.0",
    "minimatch": "^3.0.4",
    "probot": "^11.0.1"
  },
  "devDependencies": {
    "@octokit/webhooks": "^9.10.0",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.19",
    "jest": "^26.6.3",
    "nock": "^13.0.5",
    "nodemon": "^2.0.12",
    "smee-client": "^1.2.2",
    "ts-jest": "^26.4.4",
    "ts-node": "^10.1.0",
    "typescript": "^4.1.3"
  },
  "engines": {
    "node": ">= 10.13.0"
  },
  "prettier": {
    "printWidth": 140,
    "tabWidth": 4,
    "useTabs": true,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSpacing": true,
    "jsxBracketSameLine": true,
    "arrowParens": "always",
    "endOfLine": "lf"
  }
}
